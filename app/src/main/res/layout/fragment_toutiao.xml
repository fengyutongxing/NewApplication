<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_backgroup_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/headlines_srl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zhang.newapplication.views.widget.RefreshRecyclerView
            android:id="@+id/headlines_rrv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zhang.newapplication.views.widget.RefreshRecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:borderWidth="0dp"
        android:focusableInTouchMode="true"
        app:elevation="6dp"
        android:src="@drawable/ic_arrow_upward"
        app:backgroundTint="@color/main_color"
        app:layout_behavior="com.jaydenxiao.androidfire.widget.ScrollAwareFABBehavior" />

</RelativeLayout>